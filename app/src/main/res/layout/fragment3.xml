<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="#6D929B">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100px">
        <ImageView
            android:layout_width="400px"
            android:layout_height="400px"
            android:src="@drawable/test1"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/setNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:text="신나"
            android:textColor="#F5FAFA"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/setId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="usuny0317@naver.com"
            android:textColor="#F5FAFA"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/setUpdate"
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:backgroundTint="#F5FAFA"
            android:text="수정하기"
            android:textColor="#6D929B"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/setLogout"
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:backgroundTint="#F5FAFA"
            android:text="로그아웃"
            android:textColor="#6D929B"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/setNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="공지사항"
            android:textColor="#F5FAFA"
            android:layout_gravity="center"
            android:layout_marginBottom="45px"/>
        <TextView
            android:id="@+id/setAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="문의하기"
            android:textColor="#F5FAFA"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>