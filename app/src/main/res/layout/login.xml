<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/login_back">

    <LinearLayout
        android:layout_marginTop="350px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50px">
        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/test1"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수락"
            android:textColor="#EEF5FD"
            android:textSize="150px"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="50px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10px"
            >
            <ImageView
                android:layout_width="45px"
                android:layout_height="100px"
                android:layout_marginRight="10px"
                android:src="@drawable/login_image1_2"/>
            <EditText
                android:id="@+id/logEmail"
                android:layout_gravity="center"
                android:layout_width="700px"
                android:layout_height="100px"
                android:background="@drawable/edit_round"
                android:textColor="#6D929B"
                android:hint=" 이메일"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10px"
            >
            <ImageView
                android:layout_width="45px"
                android:layout_height="100px"
                android:layout_marginRight="10px"
                android:src="@drawable/login_image2_2"/>
            <EditText
                android:id="@+id/logpass"
                android:layout_gravity="center"
                android:layout_width="700px"
                android:layout_height="100px"
                android:background="@drawable/edit_round"
                android:textColor="#6D929B"
                android:hint=" 비밀번호"
                android:inputType="textPassword"
                />
        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="745px"
            android:layout_height="150px"
            android:layout_gravity="center"
            android:backgroundTint="#F5FAFA"
            android:text="로그인"
            android:textColor="#6D929B"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="170px"
        >
        <TextView
            android:id="@+id/findpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EEF5FD"
            android:textSize="50px"
            android:text="비밀번호 찾기"
            android:layout_marginRight="30px"
            android:layout_gravity="right"/>
        <TextView
            android:id="@+id/joinin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EEF5FD"
            android:textSize="50px"
            android:text="회원가입"
            android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>