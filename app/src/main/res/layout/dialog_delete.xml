<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_delete_round">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="정말 삭제하시겠습니까?"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="이 작업은 되돌릴 수 없습니다."
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@drawable/dialog_delete_round2"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/dialog_d_no"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="아니오"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center|right"
            android:background="@drawable/dialog_d_yes"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="네"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>